{{#extend "lib/loggedin" hideSearch="true"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/content/content.css"/>
    {{/content}}

    {{#content "page"}}
        <section class="store container-fluid">

            <div class="row">
                <div class="col-sm-12">
                    {{> "content/forms/form-search" }}
                    {{#if query }}
                        <h5>Suchergebnisse f√ºr "{{ query }}"</h5>
                        <hr>
                    {{/if}}
                </div>
            </div>

            <div class="row">
                <div class="card-columns col-sm-12">
                    {{#each searchResults}}
                        {{#with _source}}
                            {{> "content/item" }}
                        {{/with}}
                    {{/each}}
                </div>
            </div>

        </section>

        {{#embed "lib/components/modal-form" method="post" class="edit-modal"}}
            {{#content "fields"}}
                {{> "content/forms/form-add-lesson" }}
            {{/content}}
        {{/embed}}

    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/content.js" type="text/javascript" defer></script>
    {{/content}}
{{/extend}}
