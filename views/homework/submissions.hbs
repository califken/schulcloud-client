<section id="submissions" class="tab-content section-homeworksubmissions">
    <table class="table table-hover">
        <thead>
        <tr>
            <th/>
            <th>Vorname</th>
            <th>Nachname</th>
            <th>Abgegeben <span>{{submissionscount}}/{{usercount}}</span></th>
            <th>Bewertung {{#if averagerating}}<span>{{averagerating}}</span>{{/if}}</th>
            <th/>
        </tr>
        </thead>
		{{#each students}}
			<tbody class="usersubmission">
			<tr class="userinfo">
				<td><img class="picture" src="https://randomuser.me/api/portraits/men/3.jpg" alt=""/></td>
				<td>{{this.student.firstName}}</td>
				<td>{{this.student.lastName}}</td>
				<td>
					{{#if this.submission.comment}}
						<i class="fa fa-check green" aria-hidden="true"/>
					{{else}}
						<i class="fa fa-times red" aria-hidden="true"/>
					{{/if}}
				</td>
				<td>
					{{#if @root.courseId.gradeSystem}}
						{{#ifeqt submission.grade 0}} 6{{/ifeqt}}
						{{#if submission.grade}}
								{{#ifeqt submission.grade 1}}5-{{/ifeqt}}
								{{#ifeqt submission.grade 2}} 5{{/ifeqt}}
								{{#ifeqt submission.grade 3}}5+{{/ifeqt}}
								{{#ifeqt submission.grade 4}}4-{{/ifeqt}}
								{{#ifeqt submission.grade 5}} 4{{/ifeqt}}
								{{#ifeqt submission.grade 6}}4+{{/ifeqt}}
								{{#ifeqt submission.grade 7}}3-{{/ifeqt}}
								{{#ifeqt submission.grade 8}} 3{{/ifeqt}}
								{{#ifeqt submission.grade 9}}3+{{/ifeqt}}
								{{#ifeqt submission.grade 10}}2-{{/ifeqt}}
								{{#ifeqt submission.grade 11}} 2{{/ifeqt}}
								{{#ifeqt submission.grade 12}}2+{{/ifeqt}}
								{{#ifeqt submission.grade 13}}1-{{/ifeqt}}
								{{#ifeqt submission.grade 14}} 1{{/ifeqt}}
								{{#ifeqt submission.grade 15}}1+{{/ifeqt}}
						{{/if}}
					{{else}}
						{{#ifeqt submission.grade 0}}0 Punkte{{/ifeqt}}
						{{#if submission.grade}}{{submission.grade}} Punkte{{/if}}
					{{/if}}
					</td>
				<td><i class="fa fa-pencil-square-o" aria-hidden="true"/></td>
			</tr>
			<tr class="evaluation">
				<td colSpan="6">{{>"homework/evaluation"}}</td>
			</tr>
			</tbody>
		{{/each}}
    </table>
</section>