{{#extend "lib/default"}}
    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/authentication/home.css"/>
        <link rel="stylesheet" href="/styles/authentication/login.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script>
            window.setTimeout(function(){

                window.location.href = "{{origin}}";

            }, {{time}});
        </script>
    {{/content}}

    {{#content "body"}}
        {{#embed "lib/header"}}{{/embed}}
        <main class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <section class="card">
                        <div class="card-block">
                            <div class="col-xs-12">
                                {{> "lib/components/notification"}}
                            </div>
                            <div class="col-md-6 offset-md-3">
                                <hgroup>
                                    <h3>{{title}}</h3>
                                    <h4>{{subtitle}} <a href="{{origin}}">hier</a></h4>
                                </hgroup>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        {{#embed "lib/extended_footer"}}{{/embed}}
    {{/content}}
{{/extend}}